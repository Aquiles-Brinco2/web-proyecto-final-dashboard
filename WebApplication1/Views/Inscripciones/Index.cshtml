@model IEnumerable<WebApplication1.Models.Inscripcione>

@{
    ViewData["Title"] = "Lista de Inscripciones";
    Layout = "_Layout"; // Asegúrate de que estás usando el layout correcto
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        :root {
            --primary-color: #6200ea;
            --secondary-color: #03dac6;
            --background-color: #121212;
            --text-color: #ffffff;
            --card-bg-color: #1e1e1e;
            --card-hover-color: #2a2a2a;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background-color: var(--background-color);
            color: var(--text-color);
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            font-size: 36px;
            margin-bottom: 20px;
            text-align: center;
        }

        .table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        .table th, .table td {
            border: 1px solid #ccc;
            padding: 10px;
            text-align: left;
        }

        .btn-primary {
            background-color: var(--secondary-color);
            color: var(--background-color);
            border: none;
            border-radius: 4px;
            padding: 10px 15px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        .btn-primary:hover {
            background-color: #00b3a6;
        }

        .back-link {
            display: block;
            margin-top: 20px;
            text-align: center;
            color: var(--secondary-color);
            text-decoration: none;
        }

        .back-link:hover {
            color: var(--primary-color);
        }
    </style>
</head>
<body>
    <main class="container">
        <h1>Lista de Inscripciones</h1>

        <p>
            <a asp-action="Create" class="btn btn-primary">Crear Nueva Inscripción</a>
        </p>
        <table class="table">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.First().FechaInscripcion)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().Estado)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().IdCursoNavigation)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.First().IdUsuarioNavigation)
                    </th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>
                            @Html.DisplayFor(modelItem => item.FechaInscripcion)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Estado)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdCursoNavigation.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.IdUsuarioNavigation.Id)
                        </td>
                        <td>
                            <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                            <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                            <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>

        <a asp-action="Index" class="back-link">Volver a la lista</a>
    </main>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
