@model IEnumerable<WebApplication1.Models.Leccione>

@{
    ViewData["Title"] = "Lecciones del Curso";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        :root {
            --primary-color: #6200ea;
            --secondary-color: #03dac6;
            --background-color: #121212;
            --text-color: #ffffff;
            --card-bg-color: #1e1e1e;
            --table-border-color: #444;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background-color: var(--background-color);
            color: var(--text-color);
            margin: 0;
            padding: 0;
            display: flex;
            flex-direction: column;
            align-items: center;
            min-height: 100vh;
            transition: background-color 0.3s ease;
        }

        .container {
            max-width: 1200px;
            margin: 20px auto;
            background-color: var(--card-bg-color);
            border-radius: 8px;
            padding: 40px;
            box-shadow: 0 4px 6px rgba(0, 0, 0, 0.1);
        }

        h1 {
            color: var(--secondary-color);
            margin: 30px 0;
            text-align: center;
        }

        table {
            width: 100%;
            border-collapse: collapse;
            margin-top: 20px;
        }

        th, td {
            padding: 12px;
            border-bottom: 1px solid var(--table-border-color);
        }

        th {
            background-color: var(--primary-color);
            color: var(--text-color);
            font-weight: bold;
        }

        td {
            color: var(--text-color);
        }

        .align-left {
            text-align: left;
        }

        .align-right {
            text-align: right;
        }

        .align-center {
            text-align: center;
        }

        tr:hover {
            background-color: rgba(255, 255, 255, 0.1);
        }

        .no-lessons {
            text-align: center;
            margin-top: 20px;
            color: var(--text-color);
        }
    </style>
</head>
<body>
    <div class="container">
        <h1>@ViewData["Title"]</h1>

        @if (Model != null && Model.Any())
        {
            <table class="table">
                <thead>
                    <tr>
                        <th>Título</th>
                        <th>Descripción</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var leccion in Model)
                    {
                        <tr>
                            <td class="align-left">@leccion.Titulo</td>
                            <td class="align-left">@leccion.Contenido</td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <p class="no-lessons">No hay lecciones disponibles para este curso.</p>
        }
    </div>
</body>
</html>
