@model WebApplication1.Models.Calificacione

@{
    ViewData["Title"] = "Editar Nota";
}

<h1>Editar Nota</h1>

<div class="row">
    <div class="col-md-6">
        <form asp-action="EditarNota">
            <div class="form-group">
                <label asp-for="Calificacion" class="control-label"></label>
                <input asp-for="Calificacion" class="form-control" />
                <span asp-validation-for="Calificacion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Guardar" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<a asp-action="MisCursosInstructor">Volver a los Cursos</a>
