@model WebApplication1.Models.Soporte

@{
    ViewData["Title"] = "Editar Soporte";
}

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <style>
        :root {
            --primary-color: #6200ea;
            --secondary-color: #03dac6;
            --background-color: #121212;
            --text-color: #ffffff;
            --card-bg-color: #1e1e1e;
            --card-hover-color: #2a2a2a;
            --button-bg-color: #03dac6;
            --button-hover-color: #00b3a6;
        }

        body {
            font-family: 'Roboto', sans-serif;
            background-color: var(--background-color);
            color: var(--text-color);
            margin: 0;
            padding: 0;
        }

        .container {
            max-width: 1200px;
            margin: 0 auto;
            padding: 20px;
        }

        h1 {
            text-align: center;
            font-size: 36px;
            color: var(--primary-color);
            margin-bottom: 40px;
        }

        .soporte-edit {
            background-color: var(--card-bg-color);
            border-radius: 8px;
            padding: 20px;
            margin-bottom: 30px;
        }

        .form-group {
            margin-bottom: 20px;
        }

        label {
            font-weight: bold;
            color: var(--text-color);
            margin-bottom: 10px;
            display: block;
        }

        .form-control {
            background-color: #333;
            border: 1px solid #444;
            color: var(--text-color);
            padding: 10px;
            border-radius: 5px;
            width: 100%;
            font-size: 16px;
            transition: border-color 0.3s ease;
        }

            .form-control:focus {
                border-color: var(--primary-color);
                outline: none;
            }

        .btn {
            background-color: var(--button-bg-color);
            color: var(--background-color);
            padding: 10px 20px;
            border-radius: 5px;
            text-decoration: none;
            display: inline-block;
            transition: background-color 0.3s ease;
        }

            .btn:hover {
                background-color: var(--button-hover-color);
            }

        .back-link {
            color: var(--secondary-color);
            font-size: 16px;
            text-decoration: none;
            display: inline-block;
            margin-top: 20px;
        }

            .back-link:hover {
                color: var(--primary-color);
            }
    </style>
</head>
<body>

    <div class="container">
        <h1>Editar Soporte</h1>

        <div class="soporte-edit">
            <h4>Editar los detalles del soporte</h4>
            <hr />

            <form asp-action="Edit">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <input type="hidden" asp-for="Id" />

                <!-- Usuario -->
                <div class="form-group">
                    <label asp-for="IdUsuario">Usuario</label>
                    <select asp-for="IdUsuario" class="form-control" asp-items="ViewBag.IdUsuario"></select>
                    <span asp-validation-for="IdUsuario" class="text-danger"></span>
                </div>

                <!-- Mensaje -->
                <div class="form-group">
                    <label asp-for="Mensaje"></label>
                    <input asp-for="Mensaje" class="form-control" />
                    <span asp-validation-for="Mensaje" class="text-danger"></span>
                </div>

                <!-- Fecha Mensaje -->
                <div class="form-group">
                    <label asp-for="FechaMensaje">Fecha del Mensaje</label>
                    <input asp-for="FechaMensaje" class="form-control" />
                    <span asp-validation-for="FechaMensaje" class="text-danger"></span>
                </div>

                <!-- Estado -->
                <div class="form-group">
                    <label asp-for="Estado"></label>
                    <select asp-for="Estado" class="form-control" asp-items="ViewBag.EstadoOptions"></select>
                    <span asp-validation-for="Estado" class="text-danger"></span>
                </div>

                <!-- Botón de guardar -->
                <div class="form-group">
                    <input type="submit" value="Guardar" class="btn" />
                </div>

            </form>
        </div>

        <div>
            <a asp-action="Index" class="back-link">Volver a la lista</a>
        </div>
    </div>

</body>
</html>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
